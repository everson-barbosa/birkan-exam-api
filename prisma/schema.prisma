datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserStatus {
  CREATED
  ACTIVED
  INACTIVED
}

model User {
  id       String     @id() @default(uuid())
  email    String     @unique()
  name     String
  password String
  status   UserStatus
}

model Question {
  id            String                     @id() @default(uuid())
  enunciation   String
  examTemplates QuestionsOnExamTemplates[]
}

model QuestionsOnExamTemplates {
  examTemplate   ExamTemplate @relation(fields: [examTemplateId], references: [id])
  question       Question     @relation(fields: [questionId], references: [id])
  examTemplateId String
  questionId     String

  @@id([examTemplateId, questionId])
}

model ExamTemplate {
  id          String                     @id() @default(uuid())
  title       String
  description String
  createdAt   DateTime                   @default(now())
  updatedAt   DateTime?
  questions   QuestionsOnExamTemplates[]
}
